<header>
	<div id="_pea_ribbon-element"> </div>
	<div id="_pea_menu">
		<div class="_pea-container">
			<div class="_pea-row">
				<a class="_pea_menu-heading _pea-pull-left" href="/p-admin">
					<img src="/favicon.png" style="height: 1.7em;">
				</a>
				<nav id="_pea-user-settings" class="_pea-pull-right">
					<ul class="_pea_menu-items">
						<% if(locals.isLoggedIn()){
							%>
							<li>
								Settings
								<ul class="_pea_menu-items-subnav _pea-right">
									<li><a href="/p-admin/settings">Periodic Settings</a></li>
									<li><a href="/p-admin/users">Manage Users</a></li>
								</ul>
							</li>
							<li>
								<% if(user.username){%>
									<%- user.username %>
								<%} else{%>
									<%- user.email %>
								<%}%>
								<ul class="_pea_menu-items-subnav _pea-right">
									<li><a href="/p-admin/user/<%= user.username %>/edit">Edit Profile</a></li>
									<li><a href="/auth/logout">Logout</a></li>
								</ul>
							</li>
							<%
						} 
						else{
							%>
							<li>
								<a href="/auth/login">Login</a>
								<ul class="_pea_menu-items-subnav _pea-right">
									<li><a href="/auth/login" class="btn btn-info">Sign In</a></li>
									<li><a href="/user/register" class="btn btn-info">Register</a></li>
									<li><a href="/auth/facebook" class="btn btn-info">Login with Facebook</a></li>
								</ul>
							</li>
							<%
						} %>
					</ul>
				</nav>
			</div>
		</div>
	</div>
</header>