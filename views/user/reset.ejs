<% include ../shared/header %>
<% include ../shared/nav %>
<div class="_pea-container">
  <div class="_pea-row">
    <div class="_pea-col-span6 _pea-col-nofloat">
      <h2 class="text-left"><%= pagedata.title %> <%=pagedata.current_user.email %></h2>

      <form action="/auth/reset/<%- request.params.token %>" 
      method="post" autocomplete="on" id="reset_form" 
        name="reset_form" class="_pea-form">
        <input type="hidden" name="_csrf" value=<%= locals.token %> >
        <div class="_pea-row _pea-container-forminput">
          <small>Password</small>
          <input type="password" name="password" placeholder="password"  class="_pea-col-span12"/>
        </div>
        <div class="_pea-row _pea-container-forminput" style="margin-bottom:1.5em">
          <small>Confirm password</small>
          <input type="password" title="confirm your password" name="passwordconfirm" 
          placeholder="confirm password" class="_pea-col-span12" />
        </div>
        <div class="_pea-text-center">
          <button type="submit" name="submit" class="_pea-button _pea-color-success">
            <i class="icon-ok icon-white"></i> Reset</button>
        </form>
      </div>
    </div>
  </div>
</div>
<% include ../shared/footer %>
