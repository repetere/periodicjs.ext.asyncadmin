<% include ../shared/header %>
<% include ../shared/nav %>
	<div class="_pea-container">
		<div class="_pea-row">
			<div class="_pea-col-span6 _pea-col-nofloat">
				<h2 class="text-left"><%= pagedata.title %></h2>
				<div class="_pea-document">
					<% if(locals.isLoggedIn()){
						%>
							<div class="_pea-text-center">
								Already Logged In, <a href="/auth/logout">Log Out</a>
							</div>
						<%
					} 
					else{
						%>
							<form action="/auth/login" method="post" autocomplete="on" id="login_form" name="login_form" class="_pea-form">
								<% include login_form %>
							</form>
						<%
					} %>
				</div>
			</div>
		</div>
	</div>
<% include ../shared/footer %>